<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zj.login.dao.ILoginDao">
    <!--  获取用户信息  -->
    <select id="getLogin" parameterType="com.zj.login.model.UserBo" resultType="com.zj.login.model.UserBo">
        select * from t_user where userName=#{userName} and passWord=#{passWord}
    </select>

    <insert id="insert" useGeneratedKeys="true" >
        INSERT INTO
            t_user (userName, passWord,  phone, address,trueName  )
        VALUES
            (#{userName}, #{passWord},  #{phone},  #{address}, #{trueName})
    </insert>

    <select id="selectByusername" parameterType="String" resultType="com.zj.login.model.UserBo">
        select * from t_user where userName=#{userName}
    </select>



</mapper>
