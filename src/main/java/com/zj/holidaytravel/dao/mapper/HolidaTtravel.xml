<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zj.holidaytravel.dao.IHolidaTtravelDao">
    <insert id="addHolidaTtravel" parameterType="com.zj.holidaytravel.model.HolidaTtravelBo">
        INSERT INTO
            t_holiday_travel (id,title,phone,address,price,
            createDate,createPeople,isDelete,dotime,commodityDesc)
        VALUES
            (#{id},#{title},#{phone},#{address},#{price},
            #{createDate},#{createPeople},#{isDelete},#{dotime},#{commodityDesc})
    </insert>
    <select id="getHolidaTtravelList" parameterType="com.zj.holidaytravel.model.HolidaTtravelBo" resultType="com.zj.holidaytravel.model.HolidaTtravelBo">
        SELECT
            tcv.*,
            tu.trueName
        FROM
            t_holiday_travel tcv
            LEFT JOIN t_user tu ON tcv.createPeople=tu.id
        WHERE tcv.isDelete=0
    </select>

<!--    <select id="selectIZByid" parameterType="String"   resultType="com.zj.idlezone.model.IdleZoneBo">-->
<!--        select * from t_idle_zone where id=#{id}-->
<!--    </select>-->

<!--      删除-->
    <delete id="deleteHSByid" >
        DELETE FROM
            t_holiday_travel
        WHERE
            id=#{id}
    </delete>

    <update id="updateHSByid">
        UPDATE
            t_holiday_travel
        SET
            title=#{title},
            address=#{address},
            phone=#{phone},
            price=#{price},
            dotime=#{dotime},
            commodityDesc=#{commodityDesc}

        WHERE
            id=#{id}
    </update>




</mapper>
